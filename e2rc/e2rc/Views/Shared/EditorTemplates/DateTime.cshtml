@model DateTime?
<style type="text/css">
    .ui-widget
    {
        font-family: Verdana,Arial,sans-serif;
        font-size: 1.1em;
    }
    .ui-widget .ui-widget
    {
        font-size: 1em;
    }
    .ui-widget input, .ui-widget select, .ui-widget textarea, .ui-widget button
    {
        font-family: Verdana,Arial,sans-serif;
        font-size: 1em;
    }    
    .ui-widget-content a:hover
    {
        color: #fff !important;
    }
    .ui-widget-header
    {
        border: 1px solid #aaaaaa;
        background: #199AD6 !important;
        color: #222222;
        font-weight: bold;
    }
    .ui-state-default
    {
        background: url('../Images/DateBg.png') !important;
    }
    .ui-datepicker-title
    {
        color: White;
    }
    .ui-datepicker
    {
        width: 20em;
    }
    .ui-datepicker-current-day
    {
        background: #fff !important;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("input:text.date").datepicker({ maxDate: "0:d" }); $("input:text.storm-date").datepicker({ maxDate: "0:d" });
    });

</script>
@Html.TextBox("", Model.HasValue ? Model.Value.ToString("MM/dd/yyyy") : "", new { @class = "date", value = ""})
