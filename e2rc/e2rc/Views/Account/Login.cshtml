@model e2rc.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
<div class="form-wrapper">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()  
        <h2 class="form-horizontal-heading row">
            <i class="fa">
                <img src="../../images/login.png" alt=""/></i>Login</h2>
        <div class="form-content">
            <div class="form-group">
                <label class="col-sm-3 control-label">@Html.LabelFor(m => m.UserName)</label>
                <div class="col-sm-8">
                   @* <span class="fa fa-envelope"></span>*@
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control  email1", placeholder = "John Smith" })
                   
                </div>
                <div class="col-sm-1" style="color:red;"> @Html.ValidationMessageFor(m => m.UserName, "*", new { @style = "color:red;" })</div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    @Html.LabelFor(m => m.Password)</label>
                <div class="col-sm-8">
                  @*  <span class="fa fa-lock"></span>*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control passwordfield", value = Model != null ? Model.Password : "*********" })                   
                </div>
                <div class="col-sm-1" style="color:red;"> @Html.ValidationMessageFor(m => m.Password, "*", new { @style="color:red;" })</div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                            Remember me
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3 col-sm-offset-3">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Login</button>
                </div>
            </div>
            <div class="clearfix">
                @Html.ValidationSummary(false)</div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
